generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum BlogStatus {
  DRAFT
  PUBLISHED
  REMOVED
  ARCHIVED
}


enum SeatType {
  REGULAR
  REGULAR_WHEELCHAIR_ACCESSIBLE
}
enum PaymentStatus {
  REQUIRES_PAYMENT_METHOD
  REQUIRES_CONFIRMATION
  REQUIRES_ACTION
  PROCESSING
  REQUIRES_CAPTURE
  CANCELED
  SUCCEEDED
}

enum BookingStatus {
  INITIATED
  BOOKED
  EXPIRED
  CANCELLED
}

enum PaymentMethod {
  CASH
  CARD
}
model payment {
  id Int @id @default(autoincrement())

  provider PaymentMethod @default(CARD)
  status   PaymentStatus
  amountCents Int
  currency    String // keep as String unless you want an enum of allowed currencies

  // Relations
  userId Int?
  user   user? @relation(fields: [userId], references: [id], onDelete: SetNull)

  bookingId Int?    @unique
  booking   booking? @relation(fields: [bookingId], references: [id], onDelete: SetNull)

  invoiceId Int?
  invoice   invoice? @relation(fields: [invoiceId], references: [id], onDelete: SetNull)

  // Stripe identifiers (for webhook-driven inserts/updates)
  stripePaymentIntentId String @unique
  stripeChargeId        String? @unique
  stripeCustomerId      String?
  stripeEventLastId     String? // last processed event id (optional quick check)
  livemode              Boolean  @default(false)

  // useful fields
  receiptEmail String?
  description  String?
  metadata     Json?

  paidAt     DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  stripeEvents stripeEvent[]

  @@index([userId])
  @@index([status])
  @@index([stripeCustomerId])
}

model stripeEvent {
  id Int @id @default(autoincrement())

  stripeEventId String @unique
  type          String
  livemode      Boolean @default(false)
  created       Int? // stripe event "created" unix seconds

  // processed bookkeeping
  processedAt DateTime?
  payload     Json?

  // optional linking for convenience
  stripePaymentIntentId String?

  paymentId             Int?
  payment               payment? @relation(fields: [paymentId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([type])
  @@index([processedAt])
  @@index([stripePaymentIntentId])
  @@index([paymentId])
}

model blog {
  id     Int    @id @default(autoincrement())
  title  String
  slug   String @unique
  author String

  status        BlogStatus @default(DRAFT)
  publishedDate DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  content       String  @db.Text
  featuredMedia String?
}

model cinema {
  id        Int          @id @default(autoincrement())
  name      String
  location  String?
  auditoria auditorium[]
}

model auditorium {
  id       Int    @id @default(autoincrement())
  name     String
  cinema   cinema @relation(fields: [cinemaId], references: [id])
  cinemaId Int
  seats    seat[]
  shows    show[]
}

model seat {
  id           Int           @id @default(autoincrement())
  row          String
  number       String
  auditorium   auditorium    @relation(fields: [auditoriumId], references: [id])
  auditoriumId Int
  seatType     SeatType
  rowOffset    Int
  columnOffset Int
  bookingSeats bookingSeat[]
}

model movie {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String?  @unique
  description String
  durationMin Int
  language    String
  releaseDate DateTime
  posterUrl   String?
  trailerUrl  String?
  casts       String?
  rating      String?
  director    String?
  genres      String
  shows       show[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  banners     banner[]
}

model show {
  id           Int         @id @default(autoincrement())
  movieId      Int?
  movie        movie?      @relation(fields: [movieId], references: [id], onDelete: Cascade)
  startAt      DateTime
  auditorium   auditorium  @relation(fields: [auditoriumId], references: [id])
  auditoriumId Int
  bookings     booking[]
  seatPrices   seatPrice[]
}

model user {
  id           Int        @id @default(autoincrement())
  email        String?    @unique
  firstName    String
  lastName     String
  passwordHash String?
  emailVerifiedAt            DateTime?
  emailVerificationTokenHash String?
  emailVerificationExpiresAt DateTime?
  passwordResetTokenHash     String?
  passwordResetExpiresAt     DateTime?
  createdAt    DateTime   @default(now())
  bookings     booking[]
  accounts     account[]
  userRoles    userRole[]
  payments     payment[]
}

model account {
  id     Int  @id @default(autoincrement())
  userId Int
  user   user @relation(fields: [userId], references: [id], onDelete: Cascade)

  provider          String // "google" | "apple" | "facebook"
  providerAccountId String // account id from provider
}

model role {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  isSystem  Boolean    @default(false)
  createdAt DateTime   @default(now())
  userRoles userRole[]
}

model userRole {
  userId Int
  user   user @relation(fields: [userId], references: [id])
  roleId Int
  role   role @relation(fields: [roleId], references: [id])

  @@unique([userId, roleId]) // prevent duplicate roles per user
}

model booking {
  id                 Int            @id @default(autoincrement())
  show               show           @relation(fields: [showId], references: [id])
  showId             Int
  status             BookingStatus
  expiresAt          DateTime
  reservedAt         DateTime?
  priceCents         Int
  // paymentReferenceId String?
  paymentId Int?
  // paymentMethod      PaymentMethod?
  stripeCheckoutSessionId String? @unique
  payment   payment? 
  invoiceId          Int?
  invoice            invoice?       @relation(fields: [invoiceId], references: [id])
  userId             Int?
  user               user?          @relation(fields: [userId], references: [id])
  createdAt          DateTime       @default(now())
  bookingSeats       bookingSeat[]
}

model invoice {
  id            Int           @id @default(autoincrement())
  priceCents    Int
  paymentMethod PaymentMethod
  userName      String
  detailJson    String
  remarks       String
  bookings      booking[]
  payments      payment[]
}

model bookingSeat {
  id        Int     @id @default(autoincrement())
  bookingId Int
  booking   booking @relation(fields: [bookingId], references: [id])
  seatId    Int?
  seat      seat?   @relation(fields: [seatId], references: [id])
}

model banner {
  id          Int    @id @default(autoincrement())
  movieId     Int?
  movie       movie? @relation(fields: [movieId], references: [id])
  tag         String
  title       String
  description String
  buttonText  String
  link        String
}


model seatPrice {
  id         Int      @id @default(autoincrement())
  showId     Int
  show       show     @relation(fields: [showId], references: [id])
  seatType   SeatType
  priceCents Int

  @@unique([showId, seatType])
}
