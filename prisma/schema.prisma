generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum BlogStatus {
  DRAFT
  PUBLISHED
  REMOVED
  ARCHIVED
}

enum SeatType {
  REGULAR
  REGULAR_WHEELCHAIR_ACCESSIBLE
}

enum BookingStatus {
  INITIATED
  BOOKED
  EXPIRED
  CANCELLED
}

enum PaymentMethod {
  CASH
  CARD
}

model blog {
  id     Int    @id @default(autoincrement())
  title  String
  slug   String @unique
  author String

  status        BlogStatus @default(DRAFT)
  publishedDate DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  content       String  @db.Text
  featuredMedia String?
}

model cinema {
  id        Int          @id @default(autoincrement())
  name      String
  location  String?
  auditoria auditorium[]
}

model auditorium {
  id       Int    @id @default(autoincrement())
  name     String
  cinema   cinema @relation(fields: [cinemaId], references: [id])
  cinemaId Int
  seats    seat[]
  shows    show[]
}

model seat {
  id           Int           @id @default(autoincrement())
  row          String
  number       String
  auditorium   auditorium    @relation(fields: [auditoriumId], references: [id])
  auditoriumId Int
  seatType     SeatType
  rowOffset    Int
  columnOffset Int
  bookingSeats bookingSeat[]
}

model movie {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String?  @unique
  description String
  durationMin Int
  language    String
  releaseDate DateTime
  posterUrl   String?
  trailerUrl  String?
  casts       String?
  rating      String?
  director    String?
  genres      String
  shows       show[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  banners     banner[]
}

model show {
  id           Int         @id @default(autoincrement())
  movieId      Int?
  movie        movie?      @relation(fields: [movieId], references: [id], onDelete: Cascade)
  startAt      DateTime
  auditorium   auditorium  @relation(fields: [auditoriumId], references: [id])
  auditoriumId Int
  bookings     booking[]
  seatPrices   seatPrice[]
}

model user {
  id           Int        @id @default(autoincrement())
  email        String?    @unique
  firstName    String
  lastName     String
  passwordHash String?
  createdAt    DateTime   @default(now())
  bookings     booking[]
  accounts     account[]
  userRoles    userRole[]
}

model account {
  id     Int  @id @default(autoincrement())
  userId Int
  user   user @relation(fields: [userId], references: [id], onDelete: Cascade)

  provider          String // "google" | "apple" | "facebook"
  providerAccountId String // account id from provider
}

model role {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  isSystem  Boolean    @default(false)
  createdAt DateTime   @default(now())
  userRoles userRole[]
}

model userRole {
  userId Int
  user   user @relation(fields: [userId], references: [id])
  roleId Int
  role   role @relation(fields: [roleId], references: [id])

  @@unique([userId, roleId]) // prevent duplicate roles per user
}

model booking {
  id                 Int            @id @default(autoincrement())
  show               show           @relation(fields: [showId], references: [id])
  showId             Int
  status             BookingStatus
  expiresAt          DateTime
  reservedAt         DateTime?
  priceCents         Int
  paymentReferenceId String?
  paymentMethod      PaymentMethod?
  invoiceId          Int?
  invoice            invoice?       @relation(fields: [invoiceId], references: [id])
  userId             Int?
  user               user?          @relation(fields: [userId], references: [id])
  createdAt          DateTime       @default(now())
  bookingSeats       bookingSeat[]
}

model invoice {
  id            Int           @id @default(autoincrement())
  priceCents    Int
  paymentMethod PaymentMethod
  userName      String
  detailJson    String
  remarks       String
  bookings      booking[]
}

model bookingSeat {
  id        Int     @id @default(autoincrement())
  bookingId Int
  booking   booking @relation(fields: [bookingId], references: [id])
  seatId    Int?
  seat      seat?   @relation(fields: [seatId], references: [id])
}

model banner {
  id          Int    @id @default(autoincrement())
  movieId     Int?
  movie       movie? @relation(fields: [movieId], references: [id])
  tag         String
  title       String
  description String
  buttonText  String
  link        String
}

model seatPrice {
  id         Int      @id @default(autoincrement())
  showId     Int
  show       show     @relation(fields: [showId], references: [id])
  seatType   SeatType
  priceCents Int
}
