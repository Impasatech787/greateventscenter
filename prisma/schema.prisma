generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model cinema {
  id        Int          @id @default(autoincrement())
  name      String
  auditoria auditorium[]
}

model auditorium {
  id       Int    @id @default(autoincrement())
  name     String
  cinema   cinema @relation(fields: [cinemaId], references: [id])
  cinemaId Int
  seats    seat[]
  shows    show[]
}

model seat {
  id           Int        @id @default(autoincrement())
  row          String
  number       String
  auditorium   auditorium @relation(fields: [auditoriumId], references: [id])
  auditoriumId Int
  seat_type    String
  bookings     booking[]
}

model show {
  id           Int        @id @default(autoincrement())
  movieTitle   String
  startAt      DateTime
  auditorium   auditorium @relation(fields: [auditoriumId], references: [id])
  auditoriumId Int
  bookings     booking[]
}

model user {
  id           Int         @id @default(autoincrement())
  email        String?     @unique
  firstName    String
  lastName     String
  passwordHash String?
  createdAt    DateTime    @default(now())
  bookings     booking[]
  accounts     account[]
  user_roles   user_role[]
}

model account {
  id     Int  @id @default(autoincrement())
  userId Int
  user   user @relation(fields: [userId], references: [id], onDelete: Cascade)

  provider          String // "google" | "apple" | "facebook"
  providerAccountId String // account id from provider
}

model role {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  createdAt  DateTime    @default(now())
  user_roles user_role[]
}

model user_role {
  userId Int
  user   user @relation(fields: [userId], references: [id])
  roleId Int
  role   role @relation(fields: [roleId], references: [id])

  @@unique([userId, roleId]) // prevent duplicate roles per user
}

model booking {
  id              Int      @id @default(autoincrement())
  show            show     @relation(fields: [showId], references: [id])
  showId          Int
  seatId          Int
  seat            seat     @relation(fields: [seatId], references: [id])
  status          String // "pending", "paid", "cancelled", "expired"
  reservedAt      DateTime @default(now())
  priceCents      Int
  stripePaymentId String?
  userId          Int?
  user            user?    @relation(fields: [userId], references: [id], onDelete: Cascade)
}
